.slider image,swiper{
  width: 100%;
  height: 350rpx;
  display: block;
}
.index-nav {
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item{
  width:33.3333%;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:14px;
  border-left: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.index-nav image{
  width: 80rpx;
  height: 80rpx;
}
.index-nav .nav-item:nth-child(3n){
  border-right:none;
}
/* 首页入口分区 */
.index-enter {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}
.index-enter image{
  width:320rpx;
  height: 178rpx;
}