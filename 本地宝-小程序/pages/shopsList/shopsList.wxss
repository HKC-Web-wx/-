page{
    background-color:#fff;
}
.shop{
    padding:20rpx;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    position: relative;
}
.shop-img{
    width: 200rpx;
    height: 200rpx;
    margin: 0 20rpx;
}
.shop-info{
    width:520rpx;
    display: flex;
    flex-direction: column;
    font-size: 14px;
    color: #888;
    line-height: 1.5;
}
.shop-title{
    color: #444;
    font-size: 16px;
    width: 350rpx;
}
.shop-star{
    position: absolute;
    top: 15rpx;
    right: 10rpx;
    color:#ddd;
}

.loading{
    text-align: center;
    line-height: 80rpx;
    font-size:14px;
    color: #ccc;
}