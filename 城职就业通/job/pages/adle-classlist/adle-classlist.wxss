.classlist{
  width: 95%;
  height: 240rpx;
  border: 1rpx solid #fff;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx #ccc;
  position: relative;
}
.classlist_classname{
  color: black;
  font-size: 36rpx;
  font-weight: 700;
  margin: 20rpx;
}
.classlist_teach_name{
  color: #888;
  font-size: 24rpx;
  font-weight: 500;
  margin: 20rpx;
  position: absolute;
  right: 14rpx;
  top: -4rpx;
  width: 190rpx;
  text-align: left;
}
.classlist_headmaster_name{
  color: #888;
  font-size: 24rpx;
  font-weight: 500;
  margin: 20rpx;
  position: absolute;
  right: 14rpx;
  top: 41rpx;
  width: 190rpx;
  text-align: left;
}
.classlist_box{
  margin: 15rpx 15rpx;
  display: inline-block;
  line-height: 50rpx;
}
.classlist_time{
  font-size: 32rpx;
  color: #ccc;
}
.add-box{
  width: 100%;
  height: 125rpx;
  background-color: #f4f4f4;
  position: fixed;
  bottom: 0;
}
.add-box button{
  width: 90%;
  background-color: #07c160;
  color: #FFF;
  margin: 16rpx auto;
  border-radius: 10rpx;
}
.add-box button:hover{
  opacity: 0.7;
}
/* 修改删除按钮 */
.btn_box{
  width: 250rpx;
  height: 60rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.btn_box view:nth-child(n){
  width: 38%;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  font-weight: 700;
  color: #fff;
  background-color: #07c160;
  border-radius: 10rpx;
  margin: 0 15rpx;
  display: inline-block;
}