<view class="title-box">
  <view class="title">
    <image class="title-bg" src="/image/title-bg.jpg"></image>
    <view class="main">
      <image class="user-avatar" src="{{userInfo.avatarUrl}}"></image>
      <text class="user-name">{{userInfo.nickName}}</text>
    </view>
    <view class="switch-id" catchtap="switch_id">切换身份</view>
  </view>
</view>

