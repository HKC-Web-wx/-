      <view class="notice" catchtap='p_click'>
        <icon class="icon icon-gerenzhongxin-xuanzhong"></icon>
        <text class="notice-tit">个人信息</text>
      </view>
      <view class="notice" catchtap='f_click'>
        <icon class="icon icon-gongsiguanli"></icon>
        <text class="notice-tit">招聘会</text>
      </view>
      <view class="notice" catchtap='r_click'>
        <icon class="icon icon-ai-resume"></icon>
        <text class="notice-tit">附上简历</text>
      </view>
      <view class="notice" catchtap='e_click'>
        <icon class="icon icon-geixueshengbaoming"></icon>
        <text class="notice-tit">我的报名</text>
      </view>
      <view class="notice" catchtap='i_click'>
        <icon class="icon icon---copy"></icon>
        <text class="notice-tit">求职面试</text>
      </view>
      <view class="notice" catchtap='a_click'>
        <icon class="icon icon-luqu"></icon>
