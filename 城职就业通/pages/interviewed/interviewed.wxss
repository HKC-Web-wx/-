page{
  height: 100%;
  background-color: #f4f4f4;
}
.subox{
padding: 0 20rpx 20rpx;
margin-bottom: 120rpx;
border-top: 15rpx solid #ddd;
}
.subox view:nth-child(n){
  font-size: 12px;
  margin-top: 20rpx;
}
.subox view view{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 14px;
  border-bottom: 1px solid #ddd;
  padding: 10rpx;
}
input{
  font-size: 14px;
  border-bottom: 1px solid #ddd;
  padding: 10rpx;
}
.btn-box{
width: 100%;
height: 40px;
border-top: 2px solid #eee;
position: fixed;
bottom: 0;
padding-top: 15rpx;
padding-bottom: 15rpx;
background-color: #fff;
}
.btn-box button{
  width: 90%;
  background-color: #07c160;
  color:#FFF;
}

/* 搜索关键词 */
.select_box {
  background-color: #f4f4f4;
  padding-left: 15rpx;
  width: 53%;
  max-height: 338rpx;
  float: right;
  position: absolute;
  top: 146rpx;
  z-index: 10;
  overflow: hidden;
  text-align: left;
  font-size: 30rpx;
  box-sizing: border-box;
}
.select_box .searchRecord{
  padding-top: 0;
  margin-top: 0;
  font-size: 14px;
  color: #666666;
  line-height: 25px;
  background: #FFFFFF;
}