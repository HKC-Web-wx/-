/* pages/enterpriseList/enterpriseList.wxss */
page{
  height: 100%;
  background-color: #f4f4f4;
}
.st-box{
  margin-bottom: 130rpx;
  position: relative;
}
.e-box{
  margin-bottom: 150rpx;
}
.enterpriselist{
  width: 95%;
  height: 240rpx;
  border: 1rpx solid #fff;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx #ccc;
  position: relative;
}
.enterprise_code{
  color: black;
  font-size: 36rpx;
  font-weight: 700;
  margin: 20rpx;
}
.enterprise_name{
  color: black;
  font-size: 36rpx;
  font-weight: 700;
  margin: 20rpx;
}
.expiration_box{
  margin: 15rpx 15rpx;
  display: inline-block;
  line-height: 50rpx;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.expiration_date{
  font-size: 32rpx;
  color: #ccc;
}
.btn_box{
  width: 480rpx;
  height: 60rpx;
  text-align: center;
  position: absolute;
  right: 0rpx;
  bottom: 12rpx;
}
.btn_box view:nth-child(n){
  width: 25%;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #07c160;
  border-radius: 10rpx;
  margin: 0 15rpx;
  display: inline-block;
}
/* 底部添加学生按钮 */
.add-box{
  width: 100%;
  height: 125rpx;
  background-color: #f4f4f4;
  position: fixed;
  bottom: 0;
}
.add-box button{
  width: 90%;
  background-color: #07c160;
  color: #FFF;
  margin: 16rpx auto;
  border-radius: 10rpx;
}
.add-box button:hover{
  opacity: 0.7;
}