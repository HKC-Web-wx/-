/* pages/ad&le-tong-data/ad&le-tong-data.wxss */
.swiper-tab{  
  width: 100%; 
  height: 80rpx;
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 25%;  
  color: #777777;  
}
.on{ 
  color: #07c160;  
  border-bottom: 5rpx solid #07c160;
}
.swiper-box{ 
  display: block; 
  width: 100%; 
  overflow: hidden; 
}  
/* 已面试echars使用 */
.echar-box{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
ec-canvas {
  width: 100%;
}

page{
  background-color: #f4f4f4;
}
/* 总览echars使用 */
.box {
	width:100%;
	height:90%;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
} 
.fw{
  width: 95%;
  height: 240rpx;
  border: 1rpx solid #fff;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx #ccc;
  position: relative;
}
.fw_img{
  width: 120rpx;
  height: 120rpx;
  background-color: #07c160;
  float: left;
  margin: 15rpx;
}
.fw_title{
  color: #666;
  font-size: 36rpx;
  margin: 20rpx;
}
.fw_box{
  margin: 15rpx 15rpx;
  display: inline-block;
  line-height: 50rpx;
}
.fw_time{
  font-size: 32rpx;
  color: #ccc;
}
.fw_address{
  font-size: 32rpx;
  color: #ccc;
}
.count{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  color: #bbb;
  font-size: 24rpx;
}

.classlist{
  width: 95%;
  height: 125rpx;
  border: 1rpx solid #fff;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx #ccc;
  position: relative;
}
.classlist_classname{
  color: black;
  font-size: 36rpx;
  font-weight: 700;
  margin: 20rpx;
}
.classlist_text{
  font-size: 32rpx;
  color: #ccc;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -22rpx;
}
.teach_name{
  position: absolute;
  top: 70%;
  left: 20rpx;
  font-size: 25rpx;
  color: #bbb;
}
.headmaster_name{
  position: absolute;
  top: 70%;
  left: 40%;
  font-size: 25rpx;
  color: #bbb;
}