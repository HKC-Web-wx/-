  position: relative;
}
.classlist_classname{
  color: black;
  font-size: 36rpx;
  font-weight: 700;
  margin: 20rpx;
}
.classlist_box{
  margin: 15rpx 15rpx;
  display: inline-block;
  line-height: 50rpx;
}
