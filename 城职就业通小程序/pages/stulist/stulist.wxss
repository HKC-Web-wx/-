/* pages/stulist/stulist.wxss */
page{
  height: 100%;
  background-color: #f4f4f4;
}
.add-box{
  width: 100%;
  height: 125rpx;
  background-color: #f4f4f4;
  position: fixed;
  bottom: 0;
}
.add-box button{
  width: 90%;
  background-color: #07c160;
  color: #FFF;
  margin: 16rpx auto;
  border-radius: 10rpx;
}
.add-box button:hover{
  opacity: 0.7;
}
.st-box{
  margin-bottom: 130rpx;
  position: relative;
}
.stulist{
  width: 95%;
  height: 240rpx;
  border: 1rpx solid #fff;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx #ccc;
  position: relative;
}
.stulist_boxone{
  width: 230rpx;
  display: inline-block;
  line-height: 80rpx;
  position: absolute;
  top: 20rpx;
}
.serial_number{
  width: 40rpx;
  height: 40rpx;
  font-size: 12px;
  color: #555;
  text-align: center;
  line-height: 40rpx;
  border: 1rpx solid #555;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.stulist_boxtwo{
  display: inline-block;
  line-height: 50rpx;
  position: absolute;
  top: 10px;
  left: 35%;
  
}
.stu_time{
  font-size: 30rpx;
  color: #ccc;
}
.stu_id{
  font-size: 30rpx;
  color: #ccc;
}
.stu_phone{
  font-size: 30rpx;
  color: #ccc;
}
.stu_sex{
  width: 100%;
  color: #666;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
}
.stu_name{
  width: 100%;
  color: #555;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
}
.btn_box{
  width: 480rpx;
  height: 60rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
}
.btn_box view:nth-child(n){
  width: 25%;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #07c160;
  border-radius: 10rpx;
  margin: 0 15rpx;
  display: inline-block;
}
.warning{
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 20px;
  font-size: 14px;
  color: #ccc;
}
