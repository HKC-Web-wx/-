/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
  padding:0;
}
.userinfo button{
  margin-top: 50%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.login-from{
  margin-top: 100rpx;
  width: 100%;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  left: 20rpx;
}
.Account-number,.Password{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 80rpx;
  margin:0 auto;
  position: relative;
}
.Password{
  margin-top: 50rpx;
}
.stu-id,.stu-paw{
  width: 100%;
  height: 40px;
  border: 1px solid #bbb;
  padding-left: 70rpx;
  border-radius: 50px;
}

.login-button{
  margin-top: 100rpx;
}
.input-box{
  width: 80%;
  height: 80rpx;
  margin: 50rpx auto;
  position: relative;
}
.sel{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 50rpx;
  /* padding-left: 90rpx;
  padding-right: 30rpx; */
  line-height: 80rpx;
  position: relative;
  text-align: center;
}
.con{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 50rpx;
  padding-left: 90rpx;
  padding-right: 30rpx;
}
.sf-box{
  margin-bottom: 0;
}
.select_box{
  border: 1px solid #eee;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 0 auto;
  background-color: #fff;
  position: absolute;
  z-index: 999;
  top: 0;
  border-radius: 40rpx;
  width: 100%;
  overflow: hidden;
}
.select_box view{
  color:#555;
  /* background-color: #fff; */
  line-height: 83rpx;
  height: 83rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
}