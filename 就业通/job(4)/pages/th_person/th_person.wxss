page{
  background-color: #eee;
}
.title{
  width: 50%;
  text-align: center;
  margin:10rpx auto;
  color: #666;
  font-size: 20px;
  font-weight: 600;
}
.head-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3px solid #07c160;
  margin-left: 50rpx;
  position: absolute;
  top: 98rpx;
  right: 25rpx;
}
.teach_box{
  width: 100%;
}
.teach_news,.teach_password{
  position: relative;
  width: 95%;
  margin: 0 auto;
  border: 1px solid #ddd;
  padding: 20rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 15rpx;
  color: #888;
}
.teach_news view{
  margin-bottom: 15rpx;
}
.input-box{
  width: 100%;
  height: 100rpx;
  position: relative;
  margin-top: 30rpx;
}
.yuan{
  width: 25%;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.input-pass{
  width: 65%;
  border: 1px solid #888;
  padding: 10rpx;
  
  position: absolute;
  top: 0;
  left: 26%;
  font-size: 13px;
}
form{
  display: block;
}
.btn-box{
  width: 100%;
  position: relative;
  bottom: 0;
}
.btn-box button{
  width: 30%;
  background-color: #07c160;
  color: #fff;
}