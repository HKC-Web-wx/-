/* pages/le-fairwork/le-fairwork.wxss */
page{
  background-color: #f4f4f4;
}
.l-box{
  margin-bottom: 150rpx;
}
.le-fw{
  width: 95%;
  height: 270rpx;
  border: 1rpx solid #fff;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx #ccc;
  position: relative;
}
.le-fw_img{
  width: 120rpx;
  height: 120rpx;
  background-color: #07c160;
  float: left;
  margin: 15rpx;
}
.le-fw_title{
  color: #666;
  font-size: 36rpx;
  margin: 20rpx;
}
.le-fw_box{
  margin: 15rpx 15rpx;
  display: inline-block;
  line-height: 50rpx;
}
.le-fw_time{
  font-size: 32rpx;
  color: #ccc;
}
.le-fw_address{
  font-size: 32rpx;
  color: #ccc;
}
.add-box{
  width: 100%;
  height: 125rpx;
  background-color: #f4f4f4;
  position: fixed;
  bottom: 0;
}
.add-box button{
  width: 90%;
  background-color: #07c160;
  color: #FFF;
  margin: 16rpx auto;
  border-radius: 10rpx;
}
.add-box button:hover{
  opacity: 0.7;
}
.btn_box{
  width: 250rpx;
  height: 60rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
}
.btn_box view:nth-child(n){
  width: 38%;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  font-weight: 700;
  color: #fff;
  background-color: #07c160;
  border-radius: 10rpx;
  margin: 0 15rpx;
  display: inline-block;
}