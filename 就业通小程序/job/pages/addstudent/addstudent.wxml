<!--pages/addstudent/addstudent.wxml-->
<form bindsubmit="formSubmit">
  <view class="subox">

    <view>姓名</view>
    <input type="text" name="stu_name" maxlength="5" placeholder="请输入姓名"></input>

    <view>性别</view>
    <radio-group class="radio-group" bindchange="radioChange">
      <radio class="radio" value="男">男</radio>
      <radio class="radio" value="女">女</radio>
    </radio-group>

    <view>学号</view>
    <input type="number" name="stu_code" maxlength="12" placeholder="请输入学号"></input>

    <view>手机号</view>
    <input type="number" name="stu_phone" maxlength="11" placeholder="请输入手机号码"></input>

  </view>

  <view class="btn-box">
    <button formType="submit">确定</button>
  </view>
</form>

